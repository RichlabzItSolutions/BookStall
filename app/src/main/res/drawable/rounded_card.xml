<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Set the background color of the card -->
    <solid android:color="#FFFFFF" /> <!-- White background -->

    <!-- Set rounded corners for the card -->
    <corners android:radius="16dp" /> <!-- Adjust this value for more or less rounding -->

    <!-- Set the border of the card -->
    <stroke
        android:width="1dp"
    android:color="#DDDDDD" /> <!-- Border color -->

    <!-- Set padding inside the card (optional) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />

</shape>