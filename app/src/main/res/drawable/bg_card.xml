<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Optional Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="#1A000000" /> <!-- Shadow color with transparency -->
        </shape>
    </item>

    <!-- Card Background Layer -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Background color of the card -->
            <corners android:radius="12dp" /> <!-- Rounded corners for the card -->
        </shape>
    </item>

</layer-list>